{#
  Surcharge de la page DETAIL (affichage d'une entité)
  Template original : vendor/easycorp/easyadmin-bundle/templates/crud/detail.html.twig

  Ce fichier contient TOUS les blocs disponibles pour personnaliser la page de détail
#}
{% extends '@!EasyAdmin/crud/detail.html.twig' %}

{# ========== BODY ATTRIBUTES ========== #}

{% block body_id %}
    {{ parent() }}
    {# ID du body (ex: ea-detail-Provider-123) #}
{% endblock %}

{% block body_class %}
    {{ parent() }}
    {# Classes CSS du body #}
{% endblock %}

{# ========== HEAD ========== #}

{% block configured_head_contents %}
    {{ parent() }}
    {# Contenu HTML dans le <head> #}
{% endblock %}

{% block configured_body_contents %}
    {{ parent() }}
    {# Contenu HTML en fin de <body> #}
{% endblock %}

{% block configured_stylesheets %}
    {{ parent() }}
    {# Feuilles de style spécifiques à la page detail #}
{% endblock %}

{% block configured_javascripts %}
    {{ parent() }}
    {# JavaScript spécifiques à la page detail #}
{% endblock %}

{# ========== CONTENT ========== #}

{% block content_title %}
    {{ parent() }}
    {#
      Titre de la page (H1)

      Exemple de personnalisation :
      Détails de : {{ entity.instance.name }}
    #}
{% endblock %}

{% block page_actions %}
    {{ parent() }}
    {# Actions de page (ex: boutons Éditer, Supprimer, Retour) #}
{% endblock %}

{# ========== MAIN CONTENT ========== #}

{% block main %}
    {{ parent() }}
    {# Contenu principal (champs + bouton supprimer) #}
{% endblock %}

{% block detail_fields %}
    {{ parent() }}
    {#
      Liste de tous les champs affichés

      Boucle sur entity.fields pour afficher tous les champs de l'entité
    #}
{% endblock %}

{% block detail_field %}
    {{ parent() }}
    {#
      Un champ individuel (DEPRECATED)
      Utilisé dans les anciennes versions, préférer detail_fields
    #}
{% endblock %}

{% block delete_form %}
    {{ parent() }}
    {# Formulaire/bouton de suppression #}
{% endblock %}
