{#
  Surcharge du layout principal EasyAdmin
  Template original : vendor/easycorp/easyadmin-bundle/templates/layout.html.twig

  Ce fichier contient TOUS les blocs disponibles pour personnaliser le layout complet de l'admin
#}
{% extends '@!EasyAdmin/layout.html.twig' %}

{# ========== HEAD ========== #}

{% block head_metas %}
    {{ parent() }}
    {# Ajouter des meta tags personnalisés #}
{% endblock %}

{% block page_title %}
    {{ parent() }}
    {# Personnaliser le titre de la page (balise <title>) #}
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    {# Ajouter des feuilles de style globales #}
{% endblock %}

{% block configured_stylesheets %}
    {{ parent() }}
    {# CSS configurés via Assets::addCssFile() dans le Dashboard #}
{% endblock %}

{% block head_favicon %}
    {{ parent() }}
    {# Changer le favicon #}
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    {# Ajouter du JavaScript dans le <head> #}
{% endblock %}

{% block importmap %}
    {{ parent() }}
    {{ importmap('app') }}
    {# Import maps pour les assets (AssetMapper) #}
{% endblock %}

{% block configured_javascripts %}
    {{ parent() }}
    {# JavaScript configurés via Assets::addJsFile() dans le Dashboard #}
{% endblock %}

{% block configured_head_contents %}
    {{ parent() }}
    {# Contenu HTML personnalisé dans le <head> #}
{% endblock %}

{# ========== BODY ========== #}

{% block body %}
    {{ parent() }}
    {# Surcharger tout le <body> (rarement utilisé) #}
{% endblock %}

{% block body_attr %}
    {{ parent() }}
